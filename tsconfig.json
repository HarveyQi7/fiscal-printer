{
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "lib",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "module": "commonjs",
        "moduleResolution": "node",
        "lib": [
            "ES5",
            "ES6",
            "ES2020"
        ],
        "target": "es2018",
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "declaration": true,
        "importHelpers": true,
        "incremental": true
    },
    "include": [
        "lib"
    ],
    "exclude": [
        "node_modules"
    ]
}